/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.flex {
  display: flex;
}

.flex-col {
  flex-direction: column;
}

.flex-1 {
  flex: 1;
}

.items-center {
  align-items: center;
}

.justify-between {
  justify-content: space-between;
}

.justify-center {
  justify-content: center;
}

.gap-2 {
  gap: 8px;
}

.gap-3 {
  gap: 12px;
}

.gap-4 {
  gap: 16px;
}

.text-white {
  color: #ffffff;
}

.text-gray {
  color: #888888;
}

.bg-black-30 {
  background-color: rgba(0, 0, 0, 0.3);
}

.rounded-t {
  border-radius: 24px 24px 0 0;
}

.p-4 {
  padding: 16px;
}

.p-6 {
  padding: 24px;
}

.space-y-6 > view:not(:first-child) {
  margin-top: 24px;
}

.border-t {
  border-top: 1px solid rgba(255, 255, 255, 0.2);
}

.pt-4 {
  padding-top: 16px;
}

.mb-4 {
  margin-bottom: 16px;
}

.mb-6 {
  margin-bottom: 24px;
}

.text-xl {
  font-size: 20px;
  font-weight: bold;
}

.text-3xl {
  font-size: 24px;
  font-weight: bold;
}

.btn {
  padding: 10px 16px;
  border-radius: 8px;
  text-align: center;
  font-size: 14px;
}

.btn-primary {
  background-color: #4CAF50;
  color: white;
}

.btn-outline {
  border: 1px solid rgba(255, 255, 255, 0.3);
  color: white;
}

.avatar {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background-color: #666666;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: bold;
}

.backdrop-blur {
  backdrop-filter: blur(8px);
}
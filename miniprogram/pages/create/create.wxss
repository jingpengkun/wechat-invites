.create-bg-gradient {
  min-height: 100vh;
  background: linear-gradient(180deg, #fff 0%, #f2f3f7 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  padding-bottom: 80rpx;
}
.create-bg-top {
  width: 100vw;
  height: 260rpx;
  position: relative;
  display: flex;
  align-items: flex-start;
  justify-content: flex-end;
}
.create-bg-close {
  position: absolute;
  left: 36rpx;
  top: 48rpx;
  width: 64rpx;
  height: 64rpx;
  font-size: 56rpx;
  color: #fff;
  opacity: 0.7;
  z-index: 10;
}
.create-bg-upload {
  position: absolute;
  left: 50%;
  top: 120rpx;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 2;
}
.create-bg-upload-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 8rpx;
  opacity: 0.8;
}
.create-bg-upload-text {
  color: #fff;
  font-size: 28rpx;
  opacity: 0.9;
}
.event-card.create-card {
  margin: 32rpx 24rpx 0 24rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.10);
  border: 1px solid #f0f0f0;
  padding: 40rpx 24rpx 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  min-height: 160rpx;
}
.event-content {
  background: none;
  padding: 0;
}
.event-title.create-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #222;
  margin-bottom: 12rpx;
  border: none;
  background: transparent;
  text-align: left;
  width: 100%;
  outline: none;
}
.event-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}
.event-detail {
  display: flex;
  align-items: center;
  gap: 12rpx;
  color: #555;
  font-size: 28rpx;
}
.event-icon {
  font-size: 30rpx;
}
.event-input {
  border: none;
  background: transparent;
  font-size: 28rpx;
  color: #555;
  outline: none;
  flex: 1;
}
.event-organizer {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 12rpx;
  margin-bottom: 8rpx;
}
.create-organizer-avatar {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}
.event-organizer-text {
  color: #555;
  font-size: 28rpx;
}
.event-description.create-desc {
  width: 100%;
  min-height: 80rpx;
  background: transparent;
  border: none;
  color: #555;
  font-size: 28rpx;
  margin-top: 18rpx;
  outline: none;
  resize: none;
}
.create-btn-group {
  width: 92vw;
  max-width: 650rpx;
  margin: 40rpx auto 0 auto;
  display: flex;
  flex-direction: row;
  gap: 32rpx;
  justify-content: center;
}
.preview-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  color: #4158D0;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: 1rpx solid #dbeafe;
  box-shadow: 0 2rpx 8rpx rgba(65, 88, 208, 0.06);
  text-align: center;
  font-weight: bold;
}
.create-submit-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(90deg, #4158D0, #C850C0);
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(65, 88, 208, 0.10);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  font-weight: bold;
}
.create-submit-text {
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
} 
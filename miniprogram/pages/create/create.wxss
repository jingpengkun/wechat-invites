.container {
  padding: 48rpx 32rpx;
  background: #fff;
  min-height: 100vh;
}

.form-section {
  margin-bottom: 48rpx;
}

.form-label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  border: 1px solid #eee;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  font-size: 30rpx;
  background: #fafbfc;
  margin-bottom: 8rpx;
}

.form-picker {
  width: 100%;
  border: 1px solid #eee;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  font-size: 30rpx;
  background: #fafbfc;
  margin-bottom: 8rpx;
  color: #666;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(90deg, #4158D0, #C850C0);
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
  margin-top: 32rpx;
} 
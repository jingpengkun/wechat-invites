/* pages/index/index.wxss */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px;
  background-color: #ffffff;
  position: sticky;
  top: 0;
  z-index: 10;
}

.header-title {
  font-size: 18px;
  font-weight: bold;
}

.create-btn {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  background: linear-gradient(to bottom, #4158D0, #C850C0);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
}

.events-list {
  padding: 16px;
}

.event-card {
  margin: 32rpx 24rpx 0 24rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.10);
  border: 1px solid #f0f0f0;
  padding: 40rpx 24rpx 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  min-height: 160rpx;
}

.event-content {
  background: none;
  padding: 0;
}

.event-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #222;
  margin-bottom: 12rpx;
}

.event-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.event-detail {
  display: flex;
  align-items: center;
  gap: 12rpx;
  color: #555;
  font-size: 28rpx;
}

.event-icon {
  font-size: 30rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300px;
  color: #888888;
  text-align: center;
  gap: 8px;
}

/* 悬浮创建按钮 */
.fab-create-btn {
  position: fixed;
  right: 40rpx;
  bottom: 200rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(to bottom, #4158D0, #C850C0);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  box-shadow: 0 4rpx 16rpx rgba(65, 88, 208, 0.2);
  z-index: 100;
}

.event-tabs {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 8rpx 0 32rpx 0;
  gap: 32rpx;
}

.tab-item {
  font-size: 32rpx;
  color: #888;
  padding: 12rpx 36rpx;
  border-radius: 32rpx;
  background: #f5f5f5;
  transition: all 0.2s;
}

.tab-item.active {
  color: #fff;
  background: linear-gradient(90deg, #4158D0, #C850C0);
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(65,88,208,0.08);
}